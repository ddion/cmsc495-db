/*
 * Retrieves records of users who are being followed by
 * the specified user.
 * Results are ordered lexicographically by username.
 */
create function VIEW_FOLLOWED_USERS(
       P_VIEWER_ID_IN          BIGINT,
       P_RESULTS_OFFSET_IN     INT,
       P_RESULTS_COUNT_IN      INT)
  returns REFCURSOR as $$
declare
  C_RESULTS          REFCURSOR;
begin
  -- Retrieve followed users.
  open C_RESULTS for
    select USER_ID,
           USERNAME,
           case when HAS_ACCESS(NAME_PRIVACY, true)
                then FIRST
                else null
           end as FIRST,
           case when HAS_ACCESS(NAME_PRIVACY, true)
                then MI
                else null
           end as MI,
           case when HAS_ACCESS(NAME_PRIVACY, true)
                then LAST
                else null
           end as LAST,
           HAS_ACCESS(NAME_PRIVACY, true) as NAME_PRIVACY,
           case when HAS_ACCESS(NAME_PRIVACY, true) 
                then EMAIL
                else null
           end as EMAIL,
           HAS_ACCESS(EMAIL_PRIVACY, true) as EMAIL_PRIVACY,
           IS_FOLLOWING(FOLLOWED_ID, FOLLOWER_ID) as USER_FOLLOWING_VIEWER,
           CONNECTIONS.CREATED_TIME
      from CONNECTIONS
      join USERS
        on USER_ID = FOLLOWED_ID
     where FOLLOWER_ID = P_VIEWER_ID_IN
     order by USERNAME asc
     limit P_RESULTS_COUNT_IN
    offset P_RESULTS_OFFSET_IN;

  -- Return the results.
  return C_RESULTS;
end;
$$ language PLPGSQL;

/*
 * Retrieves records of users who are following the specified user.
 * Results are ordered lexicographically by username.
 */
create function VIEW_FOLLOWERS(
       P_VIEWER_ID_IN          BIGINT,
       P_RESULTS_OFFSET_IN     INT,
       P_RESULTS_COUNT_IN      INT)
  returns REFCURSOR as $$
declare
  C_RESULTS          REFCURSOR;
begin
  -- Retrieve followers.
  open C_RESULTS for
    select USER_ID,
           USERNAME,
           case when HAS_ACCESS(
                       NAME_PRIVACY,
                       IS_FOLLOWER(FOLLOWED_ID, FOLLOWER_ID))
                then FIRST
                else null
           end as FIRST,
           case when HAS_ACCESS(
                       NAME_PRIVACY,
                       IS_FOLLOWER(FOLLOWED_ID, FOLLOWER_ID))
                then MI
                else null
           end as MI,
           case when HAS_ACCESS(
                       NAME_PRIVACY,
                       IS_FOLLOWER(FOLLOWED_ID, FOLLOWER_ID))
                then LAST
                else null
           end as LAST,
           HAS_ACCESS(
             NAME_PRIVACY,
             IS_FOLLOWER(FOLLOWED_ID, FOLLOWER_ID)) as NAME_PRIVACY,
           case when HAS_ACCESS(
                       EMAIL_PRIVACY,
                       IS_FOLLOWER(FOLLOWED_ID, FOLLOWER_ID))
                then EMAIL
                else null
           end as EMAIL,
           HAS_ACCESS(
             EMAIL_PRIVACY,
             IS_FOLLOWER(FOLLOWED_ID, FOLLOWER_ID)) as EMAIL_PRIVACY,
           IS_FOLLOWER(FOLLOWED_ID, FOLLOWER_ID) as VIEWER_FOLLOWING_USER,
           CONNECTIONS.CREATED_TIME
      from CONNECTIONS
      join USERS
        on USER_ID = FOLLOWER_ID
     where FOLLOWED_ID = P_VIEWER_ID_IN
     order by USERNAME asc
     limit P_RESULTS_COUNT_IN
    offset P_RESULTS_OFFSET_IN;

  -- Return the results.
  return C_RESULTS;
end;
$$ language PLPGSQL;
